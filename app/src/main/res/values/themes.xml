<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Countdown" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:statusBarColor">@color/light_background</item>
        <item name="android:navigationBarColor">@color/light_background</item>
    </style>

    <style name="Theme.Countdown.Light" parent="Base.Theme.Countdown"/>

    <style name ="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/background_light</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/act_add_events_title_box_hint_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="cursorColor">@color/black</item>
        <item name="android:textColorHint">@color/act_add_events_title_box_hint_color</item>
        <item name="android:textSelectHandle">@color/black</item>
        <item name="cursorErrorColor">@color/black</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/navbar_background_light</item>
        <item name="itemIconTint">@color/act_all_nav_selected_light</item>
        <item name="itemTextColor">@color/act_all_nav_selected_light</item>
        <item name="itemIconSize">26sp</item>
        <item name="itemPaddingTop">20dp</item>
        <item name="itemPaddingBottom">20dp</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/act_events_alert_dialog_background_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="numberStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/clock_num_light_test2</item>
        <item name="android:textColor">@color/clock_label_text_light</item>
    </style>

    <style name="labelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/clock_label_text_light</item>
        <item name="android:background">@color/clock_label_test_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/clock_label_text_light</item>
    </style>

    <style name="textColouring" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
