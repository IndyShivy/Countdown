<resources>
    <style name="Base.Theme.Countdown" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/act_all_navbar_background_light</item>
        <item name="android:statusBarColor">@color/act_all_navbar_background_dark</item>
        <item name="android:navigationBarColor">@color/act_all_dark_background</item>
<!--        <item name="colorControlActivated">@color/act_all_navbar_background_dark</item>-->
    </style>

    <style name="Theme.Countdown.Dark" parent="Base.Theme.Countdown"/>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/act_all_dark_background</item>
        <item name="itemIconTint">@color/act_all_nav_selected_dark</item>
        <item name="itemTextColor">@color/act_all_nav_selected_dark</item>
        <item name="itemIconSize">26sp</item>
        <item name="itemPaddingTop">20dp</item>
        <item name="itemPaddingBottom">20dp</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/act_events_alert_dialog_background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/act_add_text_colour</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="cursorColor">@color/act_add_text_colour</item>
        <item name="android:textColorHint">@color/act_add_text_colour</item>
        <item name="android:textSelectHandle">@color/act_add_text_colour</item>
        <item name="cursorErrorColor">@color/act_add_text_colour</item>
    </style>

    <style name="numberStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/act_all_clock_num_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="labelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/act_all_clock_label_background_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textColouring" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/act_add_text_colour</item>
    </style>

    <style name="cardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/act_events_item_dark</item>
    </style>



</resources>
