<resources>
    <!--namespace declaration-->

    <!-- Base application theme. -->
    <style name="Base.Theme.Countdown" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="colorControlActivated">@color/background_dark</item>

        <!-- Add more customization for your light theme here -->
    </style>

    <style name="Theme.Countdown.Dark" parent="Base.Theme.Countdown"/>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/nav_background_dark</item>
        <item name="itemIconTint">@color/act_all_nav_selected_dark</item>
        <item name="itemTextColor">@color/act_all_nav_selected_dark</item>
        <item name="itemIconSize">26sp</item>
        <item name="itemPaddingTop">20dp</item>
        <item name="itemPaddingBottom">20dp</item>
        <item name="itemRippleColor">@null</item>
    </style>


    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/act_events_alert_dialog_background_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/act_add_events_title_box_hint_color</item>
        <item name="boxStrokeColor">@color/act_add_events_title_box</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="cursorColor">@color/black</item>
        <item name="android:textColorHint">@color/act_add_events_title_box_hint_color</item>
        <item name="android:textSelectHandle">@color/black</item>
        <item name="cursorErrorColor">@color/black</item>
    </style>

    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">#858585</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="labelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/calendar_red</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
